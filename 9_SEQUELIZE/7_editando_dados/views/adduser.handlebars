<h1>Adicione um usuário</h1>

<form action="/users/create" method="post" class="form">
  <div class="form-control">
    <label for="name">Nome:</label>
    <input type="text" name="name" placeholder="Digite o nome" />
  </div>
  <div class="form-control">
    <label for="occupation">Nome:</label>
    <input
      type="text"
      name="occupation"
      placeholder="Digite a ocupação"
    />
  </div>
  <div class="form-control form-checkbox">
    <input
      type="checkbox"
      name="newsletter"
      checked
    />
    <label for="newsletter">Receber newsletter</label>
  </div>
  <input type="submit" value="Cadastrar" />
</form>