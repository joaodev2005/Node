<h1>Todas as tarefas</h1>
<ul class="task-list">
    {{#each tasks}}
        <li>
            <a href="/" class="title">{{this.title}}</a>
            <div class="actions">
                <a href="/" class="">check</a>
                <a href="/tasks/edit/{{this.id}}" class="">edit</a>
                <form action="/tasks/remove" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">
                        🗑️
                    </button>
                </form>
            </div>
        </li>
    {{/each}}
</ul>