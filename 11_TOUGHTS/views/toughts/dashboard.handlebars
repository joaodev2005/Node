<div class="dashboard">
    <div class="title-container">
        <h2>Dashboard</h2>
        <a href="/toughts/add" class="btn">Criar pensamento</a>
    </div>
    <h3>Seus pensamentos</h3>
    <ul>
        {{#each toughts}}
            <li>
                <span class="label">{{this.title}}</span>
                <span class="actions">
                    <a href="/"class="btn">Editar</a>
                    <form action="">
                        <input type="hidden" name="id" value="{{this._id}}">
                        <button type="submit" class="btn">Excluir</button>
                    </form>
                </span>
            </li>
        {{/each}}
    </ul>
</div>