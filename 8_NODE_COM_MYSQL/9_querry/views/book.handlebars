<div id="book-page">
    <a href="/">Voltar</a>
    <div class="container">
        <h1>{{book.title}}</h1>
        <p>{{book.pageqty}} páginas</p>
        <div class="actions">
            <a href="/books/edit/{{book.id}}">Editar</a>
            <form action="/books/remove/{{book.id}}" method="post">
                <input type="submit" value="Remover">
            </form>
        </div>
    </div>
</div>