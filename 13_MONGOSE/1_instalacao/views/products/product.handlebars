<div class="product-page">
    <a href="/products">Voltar</a>
    <h1>{{product.name}}</h1>
    <p>Preco: {{product.price}}</p>
    <img src="{{product.image}}" alt="{{product.name}}">
    <p>{{product.description}}</p>
    <form action="/products/remove/{{product._id}}" alt="{{product.name}}" method="POST">
        <input type="submit" value="Remover" class="btn">
    </form>
</div>